{
  "name": "Biphub",
  "version": "0.3.0",
  "description": "Connecting people and robots",
  "main": "dist",
  "scripts": {
    "dev": "better-npm-run dev",
    "build": "babel core -s -D -d dist/core --presets es2015,stage-0 && babel bips -s -D -d dist/bips --presets es2015,stage-0",
    "start:web": "node dist",
    "start:web:forever": "forever dist",
    "prestart:web": "npm run -s build",
    "test:web": "eslint src",
    "fix": "eslint --fix ./",
    "lint:dev": "eslint ./",
    "lint:prod": "eslint --rule \"\"no-console\": [\"error\"]\" ./",
    "test:all": "mocha --compilers js:babel-core/register \"./test/**/*.js\"",
    "snyk:test": "snyk test"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon -w core -w config -w bips --exec \"babel-node core --presets es2015,es2017,stage-0\"",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build": {}
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "repository": "bipio/biphub-core",
  "author": "Jason Shin <visualbbasic@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "babel-preset-stage-0": "^6.22.0",
    "babel-runtime": "^6.23.0",
    "better-npm-run": "0.0.14",
    "bluebird": "^3.4.7",
    "body-parser": "^1.13.3",
    "bookshelf": "^0.10.3",
    "compression": "^1.5.2",
    "cors": "^2.7.1",
    "express": "^4.13.3",
    "express-handlebars": "^3.0.0",
    "hbs": "^4.0.1",
    "knex": "^0.12.7",
    "lodash": "^4.17.4",
    "mocha": "^3.2.0",
    "morgan": "^1.8.0",
    "nconf": "^0.8.4",
    "q": "^1.4.1",
    "require-all": "^2.1.0",
    "resource-router-middleware": "^0.6.0",
    "socket.io": "^1.7.3",
    "socket.io-client": "^1.7.3",
    "sqlite3": "^3.1.8"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.9.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.9.2"
  }
}
